/* 导入样式表 */
swiper{
  width: 100%;
  height: 420rpx;
}
swiper image {
  width: 100%;
}
.section{
  position: fixed;
  padding: 20rpx 0;
  top:0;
  width: 100%;
  display: flex;
  justify-content: center;
}

input{
   display: inline-block;
  width: 90%;
  border-radius: 30rpx;
  background:rgba(255, 255, 255, .8);
  font-size: 28rpx;
  margin: 0;
  padding-left: 20rpx;
  height: 70rpx;
}
.title-block{
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-bottom:20rpx;
  color: #888;
  font-size: 32rpx;
  border-bottom: 2px dashed #eee;
  display: flex;
  align-items: center;

}
.title-block image {
  width: 20rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.movie-content{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.movie-content .movie-box{
  margin-top: 10rpx;
  flex: none;
  width: 31%;
  text-align: center;
}
.movie-content .movie-box image{
  width: 95%;
  height: 320rpx; 
  display: inline-block;
 
}
.movie-content .movie-box text{
  white-space: nowrap;
  margin-top:0;
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display: block;

}
.button-box{
  padding: 40rpx;
}