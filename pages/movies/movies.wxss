/* pages/movies/movies.wxss */

.moviesContainer {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx sloid #eee;
}
.movieImg {
  width: 128rpx;
  height: 160rpx;
}
.movie_detail{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx;
}
.movie_name {
  width: 70%;
  font-size: 30rpx;
  color: #000; 
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.movie_year {
  font-size: 28rpx;
  color: #666;
  margin: 8rpx 0;
}
.movie_director {
  font-size: 30rpx;
  color: #333;
}
.movie_rating {
  color: #e92322;
  font-size: 40rpx;
  font-weight: bold;
}